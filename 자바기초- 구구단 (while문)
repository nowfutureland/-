		Scanner scan = new Scanner(System.in);
		
//		'몇단'볼지 입력받아서
		System.out.println("몇단 볼래"); 
		int 몇단 = scan.nextInt(); //18
//		'몇까지 곱할지'입력받아서
		System.out.println("몇단 곱할래");
		int 곱할수 = scan.nextInt(); //3
		
//		System.out.println(18 * 1 = 18);
//		System.out.println(18 * 2 = 36);
//		System.out.println(18 * 3 = 54);
//                        몇단 * i = (몇단*i)		
		int i = 1;
		while(i<=곱할수) {//조건 -> i가 곱할수보다 작은동안
			System.out.println(몇단+"*"+i+"="+(몇단*i));
			i++;
		}
