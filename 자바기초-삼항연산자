package mk0413;

public class Mk0413 {

	public static void main(String[] args) {
		// 변수 하나 만들어서 숫자 저장
		int 숫자 = 18;
		// 삼항 연산자활용
		//(조건식) ? 식1 : 식2
		String 결과 = "";
		
		
		//조건식 = 홀짝을 판별하는 식(나머지 연산자 %)
	    //숫자%2 == 0 -> 짝수
		결과 = (숫자%2==0) ? "짝수" : "홀수";
		System.out.println(숫자+":"+결과);
		 
		//홀인지 짝인지를 판단해서 출력하기
	
		
	}

}
